# Rewards Program API Environment Configuration
# Copy this file to .env.local and update with your values
#
# SECURITY NOTE: These are example values for development/demo purposes
# In production, use secure key management systems

# MongoDB Configuration
MONGO_USER=admin
MONGO_PASSWORD=your-secure-mongodb-password
MONGO_DATABASE=rewardsdb
MONGODB_URI=mongodb://localhost:27017/rewardsdb

# API Configuration
# Generate secure keys for production: openssl rand -hex 32
API_KEY=your-production-api-key-here
TEST_API_KEY=your-test-api-key-here

# Application Settings
SPRING_PROFILES_ACTIVE=docker
LOG_LEVEL=INFO

# JVM Settings
JAVA_OPTS=-Xmx512m -Xms256m

# Pod Configuration
POD_NAME=rewards-pod
API_CONTAINER=rewards-api
MONGO_CONTAINER=rewards-mongo
